{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Incremental Build",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/build.ps1",
        "-BuildDir",
        "${workspaceFolder}/build"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$msCompile"],
      "group": {
        "kind": "build"
      }
    },

    {
      "label": "Clean (build/)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "if (Test-Path -LiteralPath \"${workspaceFolder}\\build\") { Remove-Item -LiteralPath \"${workspaceFolder}\\build\" -Recurse -Force }"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },

    {
      "label": "Rebuild (clean + build)",
      "dependsOn": ["Clean (build/)", "Incremental Build"],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build"
      }
    }
  ]
}
